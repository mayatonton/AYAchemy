<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="クラシファイドを編集" name="panel_edit_classified">
	<panel.string name="location_notice">
		（保存後に更新されます）
	</panel.string>
	<string name="publish_label">
		発行
	</string>
	<string name="save_label">
		保存
	</string>
	<button name="back_btn" />
	<text name="title">
		クラシファイドを編集
	</text>
	<scroll_container name="profile_scroll">
		<panel name="scroll_content_panel">
			<panel name="snapshot_panel">
				<texture_picker name="classified_snapshot" />
				<icon name="edit_icon" label="" tool_tip="クリックで画像を選択します。"/>
			</panel>
			<text name="Name:">
				タイトル：
			</text>
			<line_editor name="classified_name"/>
			<text name="description_label">
				説明：
			</text>
			<text_editor name="classified_desc"/>
			<text name="location_label">
				場所：
			</text>
			<text name="classified_location">
				読み込んでいます…
			</text>
			<button label="現在の場所をセット" name="set_to_curr_location_btn"/>
			<text name="category_label" value="カテゴリ："/>
			<combo_box label="" name="category"/>
			<text name="content_type_label" value="コンテンツ種別："/>
			<icons_combo_box label="「General」コンテンツ" name="content_type">
				<icons_combo_box.item label="「Moderate」コンテンツ" name="mature_ci"/>
				<icons_combo_box.item label="「General」コンテンツ" name="pg_ci"/>
			</icons_combo_box>
			<text name="price_for_listing_label" value="掲載料："/>
			<spinner label="L$" name="price_for_listing" tool_tip="掲載料を出しています。"/>
			<check_box label="週ごとに自動更新する" name="auto_renew"/>
		</panel>
	</scroll_container>
	<panel label="ボトムパネル" name="bottom_panel">
		<button label="[LABEL]" name="save_changes_btn" />
		<button label="キャンセル" name="cancel_btn" />
	</panel>
</panel>
